<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>me.rerere.unocss-intellij</id>
    <name>Unocss</name>
    <vendor email="re_dev@qq.com" url="https://github.com/re-ovo">RE_OVO</vendor>

    <description><![CDATA[
    <h2>Unocss Support on Intellij Family</h2>
    <div>
       <h3>Features</h3>
        <ul>
          <li>Unocss Syntax Highlight</li>
          <li>Unocss Auto Complete</li>
          <li>Unocss Documentation</li>
          <li>Line Marker of Color/Icon</li>
        <ul>
    </div>
    <div>
      Source Code: <a href="https://github.com/re-ovo/unocss-intellij">Github</a>
    </div>
  ]]></description>

    <change-notes><![CDATA[
      <ul>
        <li>Fixed an issue where icon visibility was too low when using a dark theme</li>
        <li>Use a better code rendering API to render documents to avoid some css parts not being rendered</li>
      </ul>
    ]]></change-notes>

    <category>Style Sheets</category>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.css</depends>
    <depends>JavaScript</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition
                language="Unocss"
                implementationClass="me.rerere.unocssintellij.lang.UnocssParserDefinition"
        />
        <fileType
                name="Unocss file"
                implementationClass="me.rerere.unocssintellij.lang.UnocssFileType"
                fieldName="INSTANCE"
                language="Unocss"
                extensions="unocss"
        />
        <completion.contributor
                language="Unocss"
                implementationClass="me.rerere.unocssintellij.completion.UnocssAutoComplete"
                order="last"
        />

        <!-- 文档提示 -->
        <platform.backend.documentation.targetProvider
                implementation="me.rerere.unocssintellij.documentation.UnocssDocumentTargetProviderOffset"
        />
        <typedHandler implementation="me.rerere.unocssintellij.completion.TypedHandler"/>

        <!-- 图标 -->
        <codeInsight.lineMarkerProvider
                language="HTML"
                implementationClass="me.rerere.unocssintellij.marker.UnocssHtmlLineMarkerProvider"
        />
        <codeInsight.lineMarkerProvider
                language="JavaScript"
                implementationClass="me.rerere.unocssintellij.marker.UnocssJsLineMarkerProvider"
        />
        <codeInsight.lineMarkerProvider
            language="CSS"
            implementationClass="me.rerere.unocssintellij.marker.UnocssCssLineMarkerProvider"
        />

        <!-- 工具栏 -->
        <statusBarWidgetFactory
                id="UnocssStatusBar"
                implementation="me.rerere.unocssintellij.status.UnocssStatusBarFactory"
        />

        <!-- 属性标注 -->
        <externalAnnotator
                language="HTML"
                implementationClass="me.rerere.unocssintellij.highlighting.UnocssAttributeExternalAnnotator"/>
        <externalAnnotator
                language="JavaScript"
                implementationClass="me.rerere.unocssintellij.highlighting.UnocssAttributeExternalAnnotator"/>

        <!-- preset/attributify 下抑制警告 -->
        <lang.inspectionSuppressor
                language="HTML"
                implementationClass="me.rerere.unocssintellij.inspection.UnocssXmlSuppressionProvider"/>
        <lang.inspectionSuppressor
                language="JavaScript"
                implementationClass="me.rerere.unocssintellij.inspection.UnocssXmlSuppressionProvider"/>
    </extensions>

    <projectListeners>
        <listener
                class="me.rerere.unocssintellij.listener.FileListener"
                topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"
        />
    </projectListeners>
</idea-plugin>